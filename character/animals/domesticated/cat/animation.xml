<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<animation>
    <states>
        <state id="walk">
            <animation id="walk1" clipLeft="s_w_walkSource" clipRight="s_w_walkSource" rotation="65" speed="1.0" distance="0.4">
                <trigger type="sound" name="walk" t="0.01" />
                <trigger type="sound" name="walk" t="0.22" />
                <trigger type="sound" name="walk" t="0.5" />
                <trigger type="sound" name="walk" t="0.72" />
            </animation>
            <animation id="walk2" clipLeft="s_w_walkSource" clipRight="s_w_walkSource" rotation="65" speed="1.0" distance="0.4">
                <trigger type="sound" name="walk" t="0.01" />
                <trigger type="sound" name="walk" t="0.15" />
                <trigger type="sound" name="walk" t="0.3" />
                <trigger type="sound" name="walk" t="0.45" />
                <trigger type="sound" name="walk" t="0.6" />
                <trigger type="sound" name="walk" t="0.75" />
                <trigger type="sound" name="walk" t="0.9" />
            </animation>
            <animation id="walk3" clipLeft="s_w_trotSource" clipRight="s_w_trotSource" rotation="65" speed="1.5" distance="0.5">
                <trigger type="sound" name="walk" t="0.01" />
                <trigger type="sound" name="walk" t="0.19" />
                <trigger type="sound" name="walk" t="0.39" />
                <trigger type="sound" name="walk" t="0.61" />
                <trigger type="sound" name="walk" t="0.79" />
            </animation>
        </state>

        <state id="run">
            <animation id="run1" clipLeft="s_w_runSource" clipRight="s_w_runSource" rotation="10" speed="7" distance="0.8" />
        </state>

        <state id="idle">
            <animation id="idle1" clip="s_w_idleSource" distance="0" speed="1.0" rotation="0"/>
            <animation id="idle2" clip="s_w_chewSource" speed="1.25" distance="0"/>
        </state>

        <state id="idleTransition">
            <animation id="idleTransition" clip="s_w_idleSource" distance="0" speed="1.0" rotation="0"/>
        </state>


        <state id="graze">
            <animation id="graze1" clip="s_w_idleSource" distance="0"/>
        </state>

        <state id="eat">
            <animation id="eat1" clip="s_w_eatSource" speed="1.0" distance="0"/>
        </state>

        <state id="drink">
            <animation id="drink" clip="s_w_drinkSource" speed="1.0" distance="0"/>
        </state>

        <state id="sleep">
            <animation id="sleep1" clip="s_w_sleepSource" speed="1.0" distance="0"/>
            <animation id="sleep2" clip="s_w_sleepSource" speed="1.0" distance="0"/>
            <animation id="sleep3" clip="s_w_sleepSource" speed="1.0" distance="0"/>
        </state>

        <state id="rest">
            <animation id="rest1" clip="s_w_restSource" speed="1.0" distance="0"/>
            <animation id="rest2" clip="s_w_restSource" speed="1.0" distance="0"/>
            <animation id="rest3" clip="s_w_restSource" speed="1.0" distance="0"/>
        </state>

        <state id="chew">
            <animation id="chew1" clip="s_w_chewSource" weight="1" speed="1.25" distance="0"/>
        </state>

        <state id="turnLeft">
            <animation id="turnLeft1" clip="s_w_turnLeftSource" rotation="45" speed="0.5" distance="0"/>
            <animation id="turnLeft2" clip="s_w_turnLeft90Source" rotation="90" speed="1" distance="0"/>
            <animation id="turnLeft3" clip="s_w_turnLeft90Source" rotation="135" speed="1" distance="0"/>
            <animation id="turnLeft4" clip="s_w_turnLeft180Source" rotation="180" speed="1" distance="0"/>
        </state>

        <state id="turnRight">
            <animation id="turnRight1" clip="s_w_turnRightSource" rotation="45" speed="0.5" distance="0"/>
            <animation id="turnRight2" clip="s_w_turnRight90Source" rotation="90" speed="1" distance="0"/>
            <animation id="turnRight3" clip="s_w_turnRight90Source" rotation="135" speed="1" distance="0"/>
            <animation id="turnRight4" clip="s_w_turnRight180Source" rotation="180" speed="1" distance="0"/>
        </state>

    </states>

    <transitions defaultBlendTime="750">

        <transition animationIdFrom="idleTransition" animationIdTo="turnLeft1" blendTime="100" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="turnLeft2" blendTime="100" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="turnLeft3" blendTime="100" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="turnLeft4" blendTime="100" targetTime="0"/>

        <transition animationIdFrom="idleTransition" animationIdTo="turnRight1" blendTime="100" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="turnRight2" blendTime="100" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="turnRight3" blendTime="100" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="turnRight4" blendTime="100" targetTime="0"/>


        <!-- starting and stopping grazing -->
        <transition animationIdFrom="idleTransition" animationIdTo="graze1" clip="s_w_start_drink_eatSource" targetTime="0"/>
        <transition animationIdFrom="graze1" animationIdTo="idleTransition" clip="s_w_end_drink_eatSource" targetTime="0"/>


        <!-- starting and stopping a regular walk and walk with head down -->
        <transition animationIdFrom="idleTransition" animationIdTo="walk1" blendTime="1000" targetTime="0"/>
        <transition animationIdFrom="walk1" animationIdTo="idleTransition" blendTime="1000" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="walk2" clip="s_w_start_drink_eatSource" targetTime="0"/>
        <transition animationIdFrom="walk2" animationIdTo="idleTransition" clip="s_w_end_drink_eatSource" targetTime="0"/>


        <!-- going to sleep and waking up -->
        <transition animationIdFrom="idleTransition" animationIdTo="sleep1" clip="s_w_idle_to_sleepSource" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="sleep2" clip="s_w_idle_to_sleepSource" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="sleep3" clip="s_w_idle_to_sleepSource" targetTime="0"/>
        <transition animationIdFrom="sleep1" animationIdTo="idleTransition" clip="s_w_sleep_to_idleSource" targetTime="0"/>
        <transition animationIdFrom="sleep2" animationIdTo="idleTransition" clip="s_w_sleep_to_idleSource" targetTime="0"/>
        <transition animationIdFrom="sleep3" animationIdTo="idleTransition" clip="s_w_sleep_to_idleSource" targetTime="0"/>

        <!-- going down to rest and standing up -->
        <transition animationIdFrom="idleTransition" animationIdTo="rest1" clip="s_w_idle_to_restSource" targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="rest2" clip="s_w_idle_to_restSource"  targetTime="0"/>
        <transition animationIdFrom="idleTransition" animationIdTo="rest3" clip="s_w_idle_to_restSource" targetTime="0"/>
        <transition animationIdFrom="rest1" animationIdTo="idleTransition" clip="s_w_rest_to_idleSource" targetTime="0"/>
        <transition animationIdFrom="rest2" animationIdTo="idleTransition" clip="s_w_rest_to_idleSource" targetTime="0"/>
        <transition animationIdFrom="rest3" animationIdTo="idleTransition" clip="s_w_rest_to_idleSource" targetTime="0"/>

        <!-- start running from stop, and stopping -->
        <transition animationIdFrom="run1" animationIdTo="idleTransition" blendTime="400" sourceTime="500" targetTime="6666"/>
        <transition animationIdFrom="idleTransition" animationIdTo="run1" blendTime="300" targetTime="300"/>


        <transition animationIdFrom="chew1" animationIdTo="idleTransition" blendTime="1000" targetTime="6666"/>

        <!-- start eating from trough -->
        <transition animationIdFrom="idleTransition" animationIdTo="eat1" clip="s_w_start_drink_eatSource" blendTime="500" targetTime="13333"/>

        <!-- finish eating from trough -->
        <!--<transition animationIdFrom="idleTransition" animationIdTo="chew1" clip="sleepBellyMSource" blendTime="500" targetTime="13333"/>-->
        <transition animationIdFrom="eat1" animationIdTo="chew1" clip="s_w_end_drink_eatSource" blendTime="500" targetTime="13333"/>


    </transitions>

</animation>
