<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<animation>
    <states>
        <state id="walk">
            <animation id="walk1" clipLeft="s_w_walkSource" clipRight="s_w_walkSource" distance="1.3" speed="1" rotation="35" >
                <trigger type="sound" name="walk" t="0.04" />
                <trigger type="sound" name="walk" t="0.25" />
                <trigger type="sound" name="walk" t="0.47" />
                <trigger type="sound" name="walk" t="0.75" />
            </animation>
            <!--
            <animation id="walk2" clipLeft="trotLeftSource" clipRight="trotRightSource" distance="1.8" speed="1.8" rotation="35" />
            -->
        </state>
        <state id="run">
            <animation id="run" clipLeft="s_w_runSource" clipRight="s_w_runSource" distance="2.1" speed="3" rotation="35" />
        </state>
        <state id="idle">
            <animation id="idle1" clip="s_w_idle02Source" distance="0"/>
            <animation id="idle2" clip="s_w_idle01Source" distance="0"/>
        </state>
        <state id="idleTransition">
            <animation id="idleTransition" clip="s_w_idle02Source" distance="0"/>
        </state>
        <state id="eat">
            <animation id="eat" clip="s_w_eatSource" distance="0"/>
        </state>
        <state id="drink">
            <animation id="drink" clip="s_w_drinkSource" distance="0"/>
        </state>
        <state id="graze">
            <animation id="graze" clip="s_w_idle02Source" distance="0"/>
        </state>
        <state id="sleep">
            <animation id="sleep" clip="s_w_sleepSource" distance="0"/>
        </state>
        <state id="rest">
            <animation id="rest" clip="s_w_restSource" distance="0"/>
        </state>
        <state id="chew">
            <animation id="chew" clip="s_w_chewSource" distance="0"/>
        </state>
        <state id="turnLeft">
            <animation id="turnLeft1" clip="s_w_turnLeftSource" rotation="45"/>
            <animation id="turnLeft2" clip="s_w_turnLeftSource" rotation="90" speed="2.0"/>
            <animation id="turnLeft3" clip="s_w_turnLeftSource" rotation="135" speed="3.0"/>
            <animation id="turnLeft4" clip="s_w_turnLeftSource" rotation="190" speed="4.0"/>
        </state>
        <state id="turnRight">
            <animation id="turnRight1" clip="s_w_turnRightSource" rotation="45"/>
            <animation id="turnRight2" clip="s_w_turnRightSource" rotation="90" speed="2.0"/>
            <animation id="turnRight3" clip="s_w_turnRightSource" rotation="135" speed="3.0"/>
            <animation id="turnRight4" clip="s_w_turnRightSource" rotation="190" speed="4.0"/>
        </state>
    </states>
    <transitions defaultBlendTime="1250">
        <transition animationIdFrom="idleTransition" animationIdTo="eat" clip="s_w_idle_to_eatSource" targetTime="0" />
        <transition animationIdFrom="eat" animationIdTo="idleTransition" clip="s_w_eat_to_idleSource" targetTime="0" />

        <transition animationIdFrom="idleTransition" animationIdTo="graze" clip="s_w_idle_to_eatSource" targetTime="0" />
        <transition animationIdFrom="idle1" animationIdTo="graze" clip="s_w_idle_to_eatSource" targetTime="0" />
        <transition animationIdFrom="idle2" animationIdTo="graze" clip="s_w_idle_to_eatSource" targetTime="0" />
        <transition animationIdFrom="graze" animationIdTo="idle1" clip="s_w_eat_to_idleSource" targetTime="0" />
        <transition animationIdFrom="graze" animationIdTo="idle2" clip="s_w_eat_to_idleSource" targetTime="0" />
        <transition animationIdFrom="graze" animationIdTo="idleTransition" clip="s_w_eat_to_idleSource" targetTime="0" />

        <transition animationIdFrom="idleTransition" animationIdTo="sleep" clip="s_w_idle_to_sleepSource" targetTime="0" />
        <transition animationIdFrom="sleep" animationIdTo="idleTransition" clip="s_w_sleep_to_idleSource" targetTime="0" />
       
        <transition animationIdFrom="idleTransition" animationIdTo="rest" clip="s_w_idle_to_restSource" targetTime="0" />
        <transition animationIdFrom="rest" animationIdTo="idleTransition" clip="s_w_rest_to_idleSource" targetTime="0" />
       
        <!-- <transition animationIdFrom="turnLeft" animationIdTo="idleTransition" blendTime="1000" targetTime="1000" />
        <transition animationIdFrom="turnRight" animationIdTo="idleTransition" blendTime="1000" targetTime="1000" />
        <transition animationIdFrom="idleTransition" animationIdTo="turnLeft" blendTime="1000" targetTime="1000" />
        <transition animationIdFrom="idleTransition" animationIdTo="turnRight" blendTime="1000" targetTime="1000" /> -->
    </transitions>
</animation>

